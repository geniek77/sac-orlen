{
  "id": "com.sap.analytics.custom.widget.monthlycalendar2",
  "name": "Kalendarz Miesięczny 2",
  "description": "Widget kalendarza miesięcznego z wyborem miesięcy, kwartałów i pełną konfiguracją wyglądu.",
  "vendor": "G++ E.Sz dla ORLEN S.A.",
  "version": "2.2.6",
  "newInstancePrefix": "kal_mies_2",
  "webcomponents": [
    {
      "kind": "main",
      "tag": "com-sap-analytics-custom-widget-monthlycalendar-2",
      "url": "/kalendarz_miesieczny_2.js",
      "integrity": "",
      "ignoreIntegrity": true
    },
    {
      "kind": "builder",
      "tag": "com-sap-analytics-custom-widget-monthlycalendar-2-builder",
      "url": "/kalendarz_miesieczny_2_builder.js",
      "integrity": "",
      "ignoreIntegrity": true
    }
  ],
  "properties": {
    "minYear": {
      "type": "number",
      "default": 2000,
      "description": "Minimalny rok"
    },
    "maxYear": {
      "type": "number",
      "default": 2035,
      "description": "Maksymalny rok"
    },
    "numericMonths": {
      "type": "boolean",
      "default": false,
      "description": "Czy wyświetlać miesiące w formie numerycznej (np. 01, 02, 03)?"
    },
    "monthBgColor": {
      "type": "string",
      "default": "#ffffff",
      "description": "Kolor tła komórek miesięcy"
    },
    "quarterBgColor": {
      "type": "string",
      "default": "#eeeeee",
      "description": "Kolor tła nagłówków kwartałów"
    },
    "fontColor": {
      "type": "string",
      "default": "#000000",
      "description": "Kolor tekstu"
    },
    "fontFamily": {
      "type": "string",
      "default": "Arial",
      "description": "Rodzina czcionki, np. Arial"
    },
    "activeCellColor": {
      "type": "string",
      "default": "lightblue",
      "description": "Kolor zaznaczonej komórki (miesiąc/kwartał)"
    },
    "buttonColor": {
      "type": "string",
      "default": "#f0f0f0",
      "description": "Kolor tła przycisków"
    },
    "buttonTextColor": {
      "type": "string",
      "default": "#000000",
      "description": "Kolor tekstu przycisków"
    },
    "sliderColor": {
      "type": "string",
      "default": "#3399ff",
      "description": "Kolor suwaka (slidera)"
    }
  },
  "methods": {
    "get_calmoth": {
      "returnType": "string",
      "description": "Zwraca wybrany okres w formacie mm.yyyy"
    },
    "get_calmoth_sap": {
      "returnType": "string",
      "description": "Zwraca wybrany okres w formacie yyyymm"
    },
    "get_calquarter": {
      "returnType": "string",
      "description": "Zwraca wybrany kwartał w formacie yyyyq (np. 20201)"
    },
    "set_calmoth": {
      "parameters": [
        {
          "name": "period",
          "type": "string",
          "description": "Okres w formacie mm.yyyy"
        }
      ]
    },
    "set_calmoth_sap": {
      "parameters": [
        {
          "name": "period",
          "type": "string",
          "description": "Okres w formacie yyyymm"
        }
      ]
    }
  },
  "events": {
    "onSelect": {
      "description": "Zdarzenie po wyborze miesiąca, kwartału lub zmiany roku. Zwraca { type, value, selected }"
    }
  }
}

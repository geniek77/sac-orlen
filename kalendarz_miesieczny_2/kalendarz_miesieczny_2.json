{
  "id": "com.sap.analytics.custom.widget.monthlycalendar2",
  "name": "Kalendarz Miesięczny 2",
  "description": "Widget kalendarza miesięcznego z wyborem miesięcy, kwartałów i pełną konfiguracją wyglądu.",
  "vendor": "G++ E.Sz dla ORLEN S.A.",
  "version": "2.2.3",
  "newInstancePrefix": "kal_mies_2",
  "webcomponents": [
    {
      "kind": "main",
      "tag": "com-sap-analytics-custom-widget-monthlycalendar-2",
      "url": "/kalendarz_miesieczny_2.js",
      "integrity": "",
      "ignoreIntegrity": true
    },
    {
      "kind": "builder",
      "tag": "com-sap-analytics-custom-widget-monthlycalendar-2-builder",
      "url": "/kalendarz_miesieczny_2_builder.js",
      "integrity": "",
      "ignoreIntegrity": true
    }
  ],
  "properties": {
    "minYear": {
      "type": "number",
      "default": 2000
    },
    "maxYear": {
      "type": "number",
      "default": 2035
    },
    "numericMonths": {
      "type": "boolean",
      "default": false
    },
    "monthBgColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "quarterBgColor": {
      "type": "string",
      "default": "#eeeeee"
    },
    "fontColor": {
      "type": "string",
      "default": "#000000"
    },
    "fontFamily": {
      "type": "string",
      "default": "Arial"
    },
    "activeCellColor": {
      "type": "string",
      "default": "lightblue"
    },
    "buttonColor": {
      "type": "string",
      "default": "#f0f0f0"
    },
    "buttonTextColor": {
      "type": "string",
      "default": "#000000"
    },
    "sliderColor": {
      "type": "string",
      "default": "#3399ff",
      "description": "Kolor suwaka (slidera)"
    }
  },
  "methods": {
    "get_calmoth": { "returnType": "string" },
    "get_calmoth_sap": { "returnType": "string" },
    "get_calquarter": { "returnType": "string" },
    "set_calmoth": {
      "parameters": [
        {
          "name": "period",
          "type": "string",
          "description": "Okres w formacie mm.yyyy"
        }
      ]
    },
    "set_calmoth_sap": {
      "parameters": [
        {
          "name": "period",
          "type": "string",
          "description": "Okres w formacie yyyymm"
        }
      ]
    }
  },
  "events": {
    "onSelect": {
      "description": "Zdarzenie po wyborze miesiąca, kwartału lub zmiany roku. Zwraca { type, value, selected }"
    }
  }
}

{
  "id": "com.sap.analytics.custom.widget.monthlycalendar-2",
  "version": "2.2.7",
  "name": "Kalendarz Miesięczny 2",
  "description": "Widget kalendarza miesięcznego z możliwością wyboru miesiąca i kwartału oraz konfiguracją wyglądu.",
  "vendor": "G++ E.Sz dla ORLEN S.A.",
  "newInstancePrefix": "kal_mies_2",
  "webcomponents": [
    {
      "kind": "main",
      "tag": "com-sap-analytics-custom-widget-monthlycalendar-2",
      "url": "/kalendarz_miesieczny_2.js",
      "integrity": "",
      "ignoreIntegrity": true
    },
    {
      "kind": "builder",
      "tag": "com-sap-analytics-custom-widget-monthlycalendar-2-builder",
      "url": "/kalendarz_miesieczny_2_builder.js",
      "integrity": "",
      "ignoreIntegrity": true
    }
  ],
  "properties": {
    "minYear": {
      "type": "number",
      "default": 2000,
      "description": "Minimalny rok"
    },
    "maxYear": {
      "type": "number",
      "default": 2035,
      "description": "Maksymalny rok"
    },
    "numericMonths": {
      "type": "boolean",
      "default": false,
      "description": "Czy wyświetlać miesiące jako numery (01, 02, ...)"
    },
    "monthBgColor": {
      "type": "string",
      "default": "#ffffff",
      "description": "Kolor tła miesięcy"
    },
    "quarterBgColor": {
      "type": "string",
      "default": "#eeeeee",
      "description": "Kolor tła kwartałów"
    },
    "fontColor": {
      "type": "string",
      "default": "#000000",
      "description": "Kolor czcionki"
    },
    "fontFamily": {
      "type": "string",
      "default": "Arial",
      "description": "Rodzaj czcionki"
    },
    "fontSize": {
      "type": "string",
      "default": "14px",
      "description": "Rozmiar czcionki (np. 14px)"
    },
    "activeCellColor": {
      "type": "string",
      "default": "lightblue",
      "description": "Kolor zaznaczenia komórki"
    },
    "buttonColor": {
      "type": "string",
      "default": "#f0f0f0",
      "description": "Kolor tła przycisków"
    },
    "buttonTextColor": {
      "type": "string",
      "default": "#000000",
      "description": "Kolor tekstu na przyciskach"
    },
    "sliderColor": {
      "type": "string",
      "default": "#3399ff",
      "description": "Kolor suwaka"
    }
  },
  "methods": {
    "get_calmoth": { "returnType": "string" },
    "get_calmoth_sap": { "returnType": "string" },
    "get_calquarter": { "returnType": "string" },
    "set_calmoth": {
      "parameters": [
        {
          "name": "period",
          "type": "string",
          "description": "Okres w formacie mm.yyyy"
        }
      ]
    },
    "set_calmoth_sap": {
      "parameters": [
        {
          "name": "period",
          "type": "string",
          "description": "Okres w formacie yyyymm"
        }
      ]
    }
  },
  "events": {
    "onSelect": {
      "description": "Zdarzenie po wyborze miesiąca lub kwartału"
    }
  }
}

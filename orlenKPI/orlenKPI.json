{
  "id": "com.sap.analytics.custom.widget.orlenkpi",
  "version": "1.0.1",
  "name": "orlenKPI",
  "description": "Widżet KPI z dynamiczną konfiguracją wyglądu i wartości",
  "vendor": "G++ E.Sz dla ORLEN S.A.",
  "newInstancePrefix": "orlen_kpi",
  "webcomponents": [
    {
      "kind": "main",
      "tag": "com-sap-analytics-custom-widget-orlenkpi",
      "url": "/orlenKPI.js",
      "integrity": "",
      "ignoreIntegrity": true
    },
    {
      "kind": "builder",
      "tag": "com-sap-analytics-custom-widget-orlenkpi-builder",
      "url": "/orlenKPI_builder.js",
      "integrity": "",
      "ignoreIntegrity": true
    }
  ],
  "properties": {
    "title": {
      "type": "string",
      "default": "EBITDA LIFO",
      "description": "Tytuł KPI"
    },
    "mainValue": {
      "type": "string",
      "default": "315,8",
      "description": "Wartość główna"
    },
    "deltaB": {
      "type": "string",
      "default": "+198",
      "description": "Zmiana B"
    },
    "deltaBPercent": {
      "type": "string",
      "default": "+168%",
      "description": "Zmiana B w %"
    },
    "deltaRR": {
      "type": "string",
      "default": "-521",
      "description": "Zmiana R/R"
    },
    "deltaRRPercent": {
      "type": "string",
      "default": "-254%",
      "description": "Zmiana R/R w %"
    },
    "barColor": {
      "type": "string",
      "default": "#006400",
      "description": "Kolor słupka"
    },
    "fontColor": {
      "type": "string",
      "default": "#000000",
      "description": "Kolor tekstu"
    },
    "bgUpColor": {
      "type": "string",
      "default": "#dff0d8",
      "description": "Tło wartości B"
    },
    "bgDownColor": {
      "type": "string",
      "default": "#f2dede",
      "description": "Tło wartości R/R"
    },
    "fontFamily": {
      "type": "string",
      "default": "Arial",
      "description": "Rodzaj czcionki"
    },
    "fontSize": {
      "type": "string",
      "default": "14px",
      "description": "Rozmiar czcionki"
    }
  },
  "methods": {
    "getTitle": {
      "returnType": "string"
    },
    "setTitle": {
      "parameters": [
        {
          "name": "value",
          "type": "string"
        }
      ]
    },
    "getMainValue": {
      "returnType": "string"
    },
    "setMainValue": {
      "parameters": [
        {
          "name": "value",
          "type": "string"
        }
      ]
    },
    "getDeltaB": {
      "returnType": "string"
    },
    "setDeltaB": {
      "parameters": [
        {
          "name": "value",
          "type": "string"
        }
      ]
    },
    "getDeltaRR": {
      "returnType": "string"
    },
    "setDeltaRR": {
      "parameters": [
        {
          "name": "value",
          "type": "string"
        }
      ]
    }
  },
  "events": {
    "onClick": {
      "description": "Zdarzenie po kliknięciu w cały widget"
    }
  }
}
